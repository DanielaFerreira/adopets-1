<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PetsFragment">

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PetsFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="613dp"
            android:layout_height="470dp" app:srcCompat="@drawable/group"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="85dp" app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintBottom_toTopOf="@+id/message"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="366dp"
            android:layout_height="457dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="189dp" app:layout_constraintHorizontal_bias="0.482"/>
    <Button
            android:text="ADOTAR"
            android:background="@drawable/btn_adotar"
            android:padding="10dp"
            android:layout_width="264dp"
            android:layout_height="49dp"
            android:id="@+id/botao_entrar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="logar"
            app:layout_constraintHorizontal_bias="0.496" android:fontFamily="@font/nunito_black"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="530dp"
            android:layout_height="287dp" app:srcCompat="@drawable/mel"
            android:id="@+id/imageView3" android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.581"/>
    <Button
            android:text="VOLUNTARIAR-SE"
            android:layout_width="263dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="74dp" android:id="@+id/button" android:background="@drawable/btn_volunt"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/botao_entrar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>
    <TextView
            android:text="MEL"
            android:layout_width="88dp"
            android:layout_height="47dp" tools:layout_editor_absoluteY="99dp"
            tools:layout_editor_absoluteX="64dp" android:id="@+id/textView4" android:textSize="36sp"
            android:textColor="@color/colorBackgroundIn"/>
    <ImageView
            android:src="@drawable/bar_up"
            android:layout_width="343dp"
            android:layout_height="30dp" android:id="@+id/imageView4" tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="29dp"/>


</android.support.constraint.ConstraintLayout>
