<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CadastroActivity"
        android:background="@color/colorBackground">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.505" android:hint="E-mail"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="160dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextSenha"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmail" android:hint="Senha"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaoCadastrar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editTextSenha"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="cadastrar"
            app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>